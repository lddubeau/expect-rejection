{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "module": "umd",
    "declaration": true,
    "sourceMap": true,
    "outDir": "build/dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2016", "dom"]
  },
  "include": [
    "src/**/*.ts"
  ]
}
